<%= form.error_messages %>

<dl>
  <dd><%= form.hidden_field :klass_id %></dd>
  <dt><%= form.label :parent %></dt>
  <dd><%= form.select :parent_id, nested_set_options(LimitGroup, @limit_group) {|i| "#{'-' * i.level} #{i.remark}"}, :include_blank => true %></dd>
  <dt><%= form.label :logic %></dt>
  <dd><%= form.select :logic, ['AND', 'OR'] %></dd>
  <dt><%= form.label :remark %></dt>
  <dd><%= form.text_field :remark %></dd>
</dl>
